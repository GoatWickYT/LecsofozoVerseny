<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Solution.DesktopApp.Components.ParticipantListComponent"
             x:Name="this">
    
    <Border Style="{StaticResource TableData}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="60" />
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0"
               HorizontalOptions="Center"
               WidthRequest="100">
                <Image.Source>
                    <UriImageSource Uri="{Binding Participant, Source={x:Reference this}}"
                                CacheValidity="10:00:00:00" />
                </Image.Source>
            </Image>
            <BoxView Grid.Column="1"
                 BackgroundColor="Black" />
            <Label Text="{Binding Participant.Name.Value , Source={x:Reference this}}"
               Grid.Column="2"
               Style="{StaticResource TableDataText}"/>
            <ImageButton Grid.Column="2"
                     Source="edit.png"
                     BackgroundColor="Transparent"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"
                     Command="{Binding EditCommand, Source={x:Reference this}}"/>
        </Grid>
    </Border>
</ContentView>
